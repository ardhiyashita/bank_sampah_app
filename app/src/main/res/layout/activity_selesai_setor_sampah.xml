<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral0"
    tools:context=".setorSampah.SelesaiSetorSampahActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terima Kasih"
            android:gravity="center"
            style="@style/heading1_bold"
            android:textColor="@color/primary100"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sampah Anda akan segera di proses"
            android:gravity="center"
            style="@style/heading2_semibold"
            android:textColor="@color/primary100"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginVertical="15dp"
            android:src="@drawable/caramilah"/>
        <Button
            android:id="@+id/selesaiSetorSampahButton"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_rectangle_primary"
            android:fontFamily="@font/poppinssemibold"
            android:text="Selesai"
            android:textAllCaps="false" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>