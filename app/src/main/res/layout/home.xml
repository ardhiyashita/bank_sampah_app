<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_background"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-105dp">

        <TextView
            android:id="@+id/textHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="@string/hello"
            android:textColor="@color/neutral_white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:text="@string/username"
            android:textColor="@color/neutral_white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textHello"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textPilahSampah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="@string/pilahsampah"
            android:textColor="@color/neutral_white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textHello" />


        <ImageView
            android:id="@+id/imageNotif"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_notif"
            app:layout_constraintBottom_toBottomOf="@id/textHello"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textHello" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/white_ractangle_background"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textPilahSampah">

            <LinearLayout
                android:id="@+id/linearSaldo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/saldoAnda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saldo Anda"
                    android:textColor="@color/neutral_black"
                    android:textSize="12sp"
                    android:paddingTop="10dp"
                    android:paddingHorizontal="10dp"/>

                <TextView
                    android:id="@+id/saldo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp 100000"
                    android:textColor="@color/primary1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingBottom="10dp"
                    android:paddingHorizontal="10dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/celengan"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/celengansetor"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layoutBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:padding="15dp"
                android:orientation="vertical">

                <!-- Kelola tabungan -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kelolatabungan"
                    android:textStyle="bold"
                    android:textColor="@color/neutral_black"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/layoutSetorSampah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:padding="8dp"
                            android:src="@drawable/setor" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Setor Sampah"
                            android:textColor="@color/neutral_black"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutTarikSaldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:padding="8dp"
                            android:src="@drawable/tariksaldo" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Tarik Saldo"
                            android:textColor="@color/neutral_black"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutRiwayatTransaksi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:padding="8dp"
                            android:src="@drawable/riwayattransaksi" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Riwayat Transaksi"
                            android:textColor="@color/neutral_black"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Sampah Anda -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sampah Anda"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/neutral_black"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total sampah yang berhasil dikumpulkan "
                            android:layout_marginTop="0dp"
                            android:textColor="@color/neutral_black"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_next"
                        android:layout_marginVertical="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/primary_rectangle_background">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Total"
                                android:textStyle="bold"
                                android:paddingHorizontal="20dp"
                                android:paddingTop="20dp"
                                android:layout_gravity="center"
                                android:textColor="@color/neutral_white"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="25"
                                android:paddingBottom="20dp"
                                android:textStyle="bold"
                                android:paddingHorizontal="30dp"
                                android:layout_gravity="center"
                                android:textColor="@color/neutral_white"
                                android:textSize="16sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/secondary_rectangle_background"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Kertas"
                                android:textStyle="bold"
                                android:paddingHorizontal="20dp"
                                android:paddingTop="20dp"
                                android:layout_gravity="center"
                                android:textColor="@color/neutral_white"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/kertas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="25"
                                android:paddingBottom="20dp"
                                android:textStyle="bold"
                                android:paddingHorizontal="30dp"
                                android:layout_gravity="center"
                                android:textColor="@color/neutral_white"
                                android:textSize="16sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/secondary2_rectangle_background"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Botol"
                                android:textStyle="bold"
                                android:paddingHorizontal="20dp"
                                android:paddingTop="20dp"
                                android:layout_gravity="center"
                                android:textColor="@color/neutral_white"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/botol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="25"
                                android:paddingBottom="20dp"
                                android:textStyle="bold"
                                android:paddingHorizontal="30dp"
                                android:layout_gravity="center"
                                android:textColor="@color/neutral_white"
                                android:textSize="16sp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/secondary3_rectangle_background">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Plastik"
                                android:textStyle="bold"
                                android:paddingHorizontal="20dp"
                                android:paddingTop="20dp"
                                android:layout_gravity="center"
                                android:textColor="@color/neutral_white"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/plastik"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="25"
                                android:paddingBottom="20dp"
                                android:textStyle="bold"
                                android:paddingHorizontal="30dp"
                                android:layout_gravity="center"
                                android:textColor="@color/neutral_white"
                                android:textSize="16sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/accent_rectangle_background"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Logam"
                                android:textStyle="bold"
                                android:paddingHorizontal="20dp"
                                android:paddingTop="20dp"
                                android:layout_gravity="center"
                                android:textColor="@color/neutral_white"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/logam"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="25"
                                android:paddingBottom="20dp"
                                android:textStyle="bold"
                                android:paddingHorizontal="30dp"
                                android:layout_gravity="center"
                                android:textColor="@color/neutral_white"
                                android:textSize="16sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/accent_rectangle_background"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Lainnya"
                                android:textStyle="bold"
                                android:paddingHorizontal="20dp"
                                android:paddingTop="20dp"
                                android:layout_gravity="center"
                                android:textColor="@color/neutral_white"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/lainnya"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="25"
                                android:paddingBottom="20dp"
                                android:textStyle="bold"
                                android:paddingHorizontal="30dp"
                                android:layout_gravity="center"
                                android:textColor="@color/neutral_white"
                                android:textSize="16sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Panduan -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Panduan"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/neutral_black"
                    android:textSize="16sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/panduan_rectangle">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:src="@drawable/caramenggunakan" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Cara Menggunakan Aplikasi"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/neutral_black"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/panduan_rectangle">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:src="@drawable/caranyetor" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Cara Penyetoran Sampah"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/neutral_black"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/panduan_rectangle">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:src="@drawable/caranarik" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Cara Penarikan Saldo"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/neutral_black"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/panduan_rectangle">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:src="@drawable/caramilah" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Cara Memilah Sampah"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/neutral_black"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- Tentang Kami -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tentang Kami"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/neutral_black"
                    android:textSize="16sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/primary_rectangle_background">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:src="@drawable/asset1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Bank Sampah Sami Asri"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/neutral_white"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/secondary_rectangle_background">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:src="@drawable/asset1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Pesan-Pede"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/neutral_white"
                        android:textSize="16sp"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>