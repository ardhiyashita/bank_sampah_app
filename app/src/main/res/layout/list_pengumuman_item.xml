<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:background="@drawable/bg_rectangle_green60">


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_notif_green" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_gravity="center"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/judul_pengumuman"
            style="@style/heading3_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul"
            android:textColor="@color/neutral80"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/isi_pengumuman"
            style="@style/body3_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penjemputan sampah ke rumah warga"
            android:textColor="@color/neutral80" />
    </LinearLayout>

</LinearLayout>