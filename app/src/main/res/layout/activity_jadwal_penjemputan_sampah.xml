                <TextView
                    android:id="@+id/jam2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/neutral100"
                    style="@style/body3_regular"
                    android:layout_weight="1"
                    android:text="Jam Operasional" />
            </TableRow>
            <!-- isian jadwal Rabu -->
