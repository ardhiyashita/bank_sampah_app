                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp">
                <TextView
                    android:id="@+id/hari7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/body3_regular"
                    android:gravity="center"
