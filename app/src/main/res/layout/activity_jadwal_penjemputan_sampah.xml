<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral0"
    tools:context=".informasi.JadwalPengumpulanSampahActivity">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- jadwal pengumpulan sampah bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Jadwal Penjemputan Sampah"
                style="@style/heading2_semibold"
                android:gravity="center"
                android:textColor="@color/neutral100"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>
        <!-- table view jadwal -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TableRow
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/heading3_bold"
                    android:gravity="center"
                    android:textColor="@color/neutral100"
                    android:layout_weight="1"
                    android:text="Hari" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/neutral100"
                    style="@style/heading3_bold"
                    android:layout_weight="1"
                    android:text="Jam Operasional" />
            </TableRow>
            <!-- isian jadwal Senin -->
            <TableRow
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp">
                <TextView
                    android:id="@+id/hari8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/body3_regular"
                    android:gravity="center"
                    android:textColor="@color/neutral100"
                    android:layout_weight="1"
                    android:text="Senin" />
                <TextView
                    android:id="@+id/jam1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/neutral100"
                    style="@style/body3_regular"
                    android:layout_weight="1"
                    android:text="Jam Operasional" />
            </TableRow>
            <!-- isian jadwal Selasa -->
