<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/bg_rectangle_white_stroke">
        <TextView
            android:id="@+id/jenisTransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:text="Setoran"
            style="@style/heading1_semibold"
            android:textStyle="bold"
            android:textColor="@color/neutral80" />
        <TextView
            android:id="@+id/statusTransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Penyetoran sedang diverifikasi"
            style="@style/smalltext_regular"
            android:textStyle="bold"
            android:textColor="@color/accent100" />
        <TextView
            android:id="@+id/tanggalTransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:text="01 November 2022"
            style="@style/body3_regular"
            android:textStyle="bold"
            android:textColor="@color/neutral40" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>