<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_rectangle_white_stroke"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp">

        <ImageView
            android:id="@+id/panduan_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="8dp"
            android:src="@drawable/caramenggunakan" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/panduan_count"
            style="@style/heading4_semibold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="1."
            android:textColor="@color/neutral80"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/panduan_content"
            style="@style/heading4_semibold"
            android:layout_marginStart="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Cara Menggunakan Aplikasi"
            android:textColor="@color/neutral80"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>